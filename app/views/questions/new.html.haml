.wrapper
  = render partial: 'notifications', locals: { question: @question }
  .new-edit-question
    %h2 登録フォーム
    %br/
    = form_for @question do |f|
      タイトル
      %br/
      = f.text_field :title
      %br/
      質問内容
      %br/
      = f.text_area :content, size: "40x5"
      %br/
      カテゴリー
      %br/
      = f.collection_check_boxes :category_ids, Category.all, :id, :name
      %br/
      = f.submit "Send"
      %br/
      %br/
      =link_to "一覧に戻る", root_path